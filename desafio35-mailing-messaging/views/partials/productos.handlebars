{{#if loggedUsername}}
    {{>loggedInBar}}
{{/if}}
{{>crearProductos}}
<section class="row pt-4">
    <div class="card shadow">
        <div class="card-body">
            <h1>Vista de Productos</h1>
            <hr>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Foto</th>
                            <th>Descripción</th>
                            <th>Código</th>
                            <th>Stock</th>
                        </tr>
                    </thead>
                    <tbody id="productos">
                        {{#each listaDeProductos}}
                            <tr>
                                <td>{{this.name}}</td>
                                <td>${{this.price}}</td>
                                <td><img src="{{this.imageURL}}" alt=""></td>
                                <td>{{this.description}}</td>
                                <td>{{this.code}}</td>
                                <td>{{this.stock}}</td>
                            </tr>
                            {{else}}
                            <tr id="noProductFound"><td colspan="3"><h3 class="alert alert-warning">No se encontraron productos</h3></td></tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
